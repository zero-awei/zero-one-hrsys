<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zeroone.star.sysmanager.mapper.MenuMapper">

    <resultMap id="BaseResultMap" type="com.zeroone.star.sysmanager.entity.Menu">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="link_url" jdbcType="VARCHAR" property="linkUrl" />
        <result column="path" jdbcType="VARCHAR" property="path" />
        <result column="priority" jdbcType="INTEGER" property="priority" />
        <result column="icon" jdbcType="VARCHAR" property="icon" />
        <result column="description" jdbcType="VARCHAR" property="description" />
        <result column="parent_menu_id" jdbcType="INTEGER" property="parent_menu_id" />
        <result column="level" jdbcType="INTEGER" property="level" />
        <result column="is_enable" jdbcType="TINYINT" property="isEnable" />
    </resultMap>

    <select id="selectByRoleName" resultMap="BaseResultMap">
      SELECT id,`name`,path,icon,parent_menu_id FROM zo_menu WHERE path IS NOT NULL AND id IN (SELECT menu_id FROM zo_role_menu WHERE role_id=(SELECT id FROM zo_role WHERE keyword=#{roleName})) ORDER BY priority
    </select>
</mapper>
